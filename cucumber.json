{
"default":
    {
        "paths": [
        "src/tests/features/AddToCart.feature",
        "src/tests/features/login.feature"
    ],
        "publishQuiet": false,
        "DryRun": true,
        "require": ["src/tests/steps/*.ts",
                     "src/tests/hooks/hooks.ts"],
        "requireModule": ["ts-node/register"],
        "format":[
            "progress-bar",
            "html:test-results/cucumber-report.html",
            "json:test-results/report.json",
            "rerun:@rerun.txt"
        ],
            "parallel":2,
            "retry":1
    },
    "rerun":
    {
        "publishQuiet": false,
        "DryRun": true,
        "require": ["src/tests/steps/*.ts",
                     "src/tests/hooks/hooks.ts"],

        "requireModule": ["ts-node/register"],
        "format":[
            "progress-bar",
            "html:test-results/cucumber-report.html",
            "json:test-results/report.json",
            "rerun:@rerun.txt"
        ],
            "parallel":2
    }
}